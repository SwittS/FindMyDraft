<%= render 'global/navbar' %>

<div class="createAccount row">
<form class="col s12 m6 offset-m3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-field">
    <i class="material-icons prefix">account_circle</i>
    <label for="icon_prefix">Full Name</label>
    <%= f.text_field :fullname %>
  </div>

  <div class="input-field">
    <i class="material-icons prefix">email</i>
    <label for="icon_prefix">Email Address</label>
    <%= f.email_field :email %>
  </div>

  <div class="input-field">
    <i class="material-icons prefix">lock_open</i>
    <label for="icon_prefix">Password</label>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="input-field">
    <i class="material-icons prefix">phone</i>
    <label for="icon_prefix">Phone Number</label>
    <%= f.text_field :phone_number %>
  </div>

  <div class="privacy">
    <p>By signing up, I agree to Find My Draftâ€™s <a href="#">Terms of Service</a>, <a href="#">Privacy Policy</a>, and <a href="#">Venue Guarantee Terms</a>.</p>
    <br>
  </div>

  <div class="actions center-align">
    <%= f.submit "Create Account", :class=>'waves-effect waves-blue waves-ripple btn createBtn' %>
  </div>
<% end %>
</form>
</div>

<%= render "devise/shared/links" %>
