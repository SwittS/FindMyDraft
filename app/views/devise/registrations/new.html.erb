<%= render 'global/navbar' %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<div class="createAccount row">
  <div class="col s12 m6 offset-m3">
  <div class="input-field">
    <i class="material-icons prefix blue-grey-text">account_circle</i>
    <label for="icon_prefix">Full Name</label>
    <%= f.text_field :fullname, autofocus: true %>
  </div>

  <div class="input-field">
    <i class="material-icons prefix blue-grey-text">email</i>
    <label for="icon_prefix">Email Address</label>
    <%= f.email_field :email %>
  </div>

  <div class="input-field">
    <i class="material-icons prefix blue-grey-text">lock_open</i>
    <label for="icon_prefix">Password</label>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="input-field">
    <i class="material-icons prefix blue-grey-text">phone</i>
    <label for="icon_prefix">Phone Number</label>
    <%= f.text_field :phone_number %>
  </div>

  <div class="center-align">
    <label for=":file"><h6>Upload a profile picture:</h6></label>
    <%= f.uploadcare_field :file, :data => {:images_only => true, :crop => "500x500 minimum", :image_shrink => "500x500", :clearable => true } %>
  </div>

  <div class="privacy">
    <p>By signing up, I agree to Find My Draftâ€™s <a href="#">Terms of Service</a>, <a href="#">Privacy Policy</a>, and <a href="#">Venue Guarantee Terms</a>.</p>
    <br>
  </div>

  <div class="actions">
    <%= f.submit "Create Account", :class=>'waves-effect waves-blue waves-ripple btn createBtn orange darken-3' %>
  </div>
  <% end %>
  </div>
</div>
<div class="article-container single-article">
    <div class="article-container-inner">
        <hr>
    </div>
</div>
<%= render "devise/shared/links" %>
