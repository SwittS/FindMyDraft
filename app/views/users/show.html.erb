<%= render 'global/navbar' %>

<div class="row">
    <h1 style="text-align:center;">Welcome,
        <%= @user.fullname %>
    </h1>
</div>

<div class="container">
  <div class="row">

  <div class="col l3 ">
    <div class="card hide-on-med-and-down hoverable">
      <div class="card-image">
          <img src="http://lorempixel.com/100/190/nature/6" height=200px width=200px>
          <span class="card-title">Card Title</span>
      </div>
      <div class="card-content flow-text">
          <p>Should something go here?</p>
      </div>
      <div class="card-action">
          <a href="#">This is a link</a>
      </div>
    </div>
  </div>
  <div class="col s12 m8 l9">
    <h5 style="text-align:center;" , class="header">Upcoming Bookings</h2>
    <br>
    <div class="card horizontal hoverable">
      <div class="card-image">
          <img src="http://lorempixel.com/100/190/nature/6">
      </div>
      <div class="card-stacked">
        <div class="card-content center">
            <h7><strong>Venue Name</strong></h7>
              <hr>
                <p><%= @venue.venue_name %></p>
            <h7><strong>Date</strong></h7>
            <hr>
                <p><%= @booking.draft_date %></p>
        </div>
        <div class="card-action">
        <a href="#">This is a link</a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col s2 m2 l3"></div>
    <div class="col s12 m8 l9">
        <h5 style="text-align:center;" class="header">Your Venues</h2>
        <br>
        <div class="card horizontal hoverable">
            <div class="card-image">
                <img src="http://lorempixel.com/100/190/nature/6">
            </div>
            <div class="card-stacked">
              <div class="card-content center">
                <h7><strong>Venue Name</strong></h7>
                <hr>
                <p><%= @venue.venue_name %></p>
              </div>
              <div class="card-action">
                  <a href="#">This is a link</a>
              </div>
            </div>
        </div>
    </div>
</div>
</div>
