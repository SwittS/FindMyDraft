<%= render 'global/navbar' %>

<div class="container">
  <br>
  <div class="col s12 l12">
    Find the perfect fit: Explore draft venues.
  </div>
  <br>
  <hr>
  <br>
  <nav>
  <div class="nav-wrapper blue-grey darken-2">
    <%= search_form_for @q do |g| %>
    <form>
      <div class="input-field">
        <%= g.search_field :venue_name_or_address_cont, :placeholder=>"Search Venues", :id=>'search', :class=>'center-align' %>
        <label for="search"><i class="material-icons">search</i></label>
        <i class="material-icons">close</i>
      </div>
      <% end %>
    </form>
  </div>
</nav>

  <br>
  <br>

<div id="venueView" class="transitions-enabled clearfix">

  <% @venue.each do |f| %>

    <div id="box">
      <div class="panel-body">
        <div class="colCard s12 m12 l4">
          <div class="card small">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator responsive-img" src="<%= f.file %>" >
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%= f.venue_name %><i class="material-icons right">more_vert</i></span>
              <p><%= f.address %></p>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4">About This Venue<i class="material-icons right">close</i></span>
              <div class="row">
      <i class="medium material-icons">perm_scan_wifi</i>Free WiFi? <%= t(f.wifi.class) %>
              </div>
              <div class="">
          <i class="medium material-icons">supervisor_account</i>Accomodates a <%= f.accomodate %> Team League
              </div>
              <br>
              <hr>
              <div class="center-align">
                <%= link_to "Request to Book", venue_path(f), :class => "waves-effect waves-light btn blue-grey darken-2 center", :method => :get %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <br>
  <hr>
</div>
