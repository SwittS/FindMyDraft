<%= render 'global/navbar' %>

<div class="container">
  <br>
  <div class="col s12 l12">
    Find the perfect fit: Explore draft venues.
  </div>
  <br>
  <hr>
  <br>
  <div class="searchFilter row">
    <div class="col s4 l4 center-align">
    </div>
    <div class="col s4 l4 center-align">
      League Size
    </div>
    <div class="col s4 l4 center-align">
      Find a venue
    </div>
  </div>
  <br>
  <br>

<div id="venueView" class="transitions-enabled">

  <% @venues.each do |f| %>

    <div class="box">
      <div class="panel-body">
        <div class="col s12 m12 l4">
          <div class="card small">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator responsive-img" src="<%= f.file %>" >
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%= f.venue_name %><i class="material-icons right">more_vert</i></span>
              <p><%= f.address %></p>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4">About This Venue<i class="material-icons right">close</i></span>
              <div class="row">
      <i class="medium material-icons">perm_scan_wifi</i>Free WiFi? <%= t(f.wifi.class) %>
              </div>
              <div class="">
          <i class="medium material-icons">supervisor_account</i>Accomodates a <%= f.accomodate %> Team League
              </div>
              <br>
              <hr>
              <div class="center-align">
                <%= link_to "Request to Book", venue_path(f), :class => "waves-effect waves-light btn blue-grey darken-2 center", :method => :get %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <br>
  <hr>
</div>
