<body class='userBody'>
  <div class="row">
    <div class="col s12 m6 center">
      <h5 class="white-text"><u>Address</u></h5>
      <h6><i class="small material-icons prefix orange-text text-darken-3">location_on</i>
      <%= @venue.address %><h6>
      <br>
      <br>
      <script src="//maps.google.com/maps/api/js?v=3.25&key=AIzaSyC9Rer1Z5lhl-6yXyw0KZ8-rbt35YRwgow"></script>
      <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
      <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
        <div class="mapContainer">
          <div id="map"></div>
        </div>
        <script type="text/javascript">
          handler = Gmaps.build('Google');
          handler.buildMap({ provider: { scrollwheel: false }, internal: {id: 'map'}}, function(){
            markers = handler.addMarkers(<%=raw @hash.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
            handler.getMap().setZoom(15);
          });
        </script>
    </div>
    <div class="col s12 m6 center">
      <h5 class='white-text'><u>Request to Book</u></h5>
      <br class="hide-on-small-only">
      <br class="hide-on-small-only">
      <br class="hide-on-small-only">
      <%= render 'bookings/form' %>
    </div>
  </div>
  <div class=""><br><br></div>
</body>
