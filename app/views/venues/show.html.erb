<%= render 'global/navbar' %>
<body class='userBody'>

<div class="container">
  <div class="userForms">

  <br>
  <div class="row center-align">
    <h3></h3>
  </div>

  <div class="row venueShowCard">
  <div class="col s12 m7 l8 venueShowCard">
    <div class="card large">
      <div class="card-image">
          <img class="responsive-img" src="<%= @venue.file %>" >
        <h2><span class="card-title"><%= @venue.venue_name %></span></h2>
      </div>
      <br>
      <br>
      <div class="card-content">
        <div class="row">
          <div class="col s6 center-align">
            <i class="medium material-icons prefix orange-text text-darken-3">perm_scan_wifi</i>
            <p><%= t(@venue.wifi.class) %></p>
          </div>
          <div class="col s6 center-align">
            <i class="medium material-icons prefix orange-text text-darken-3">supervisor_account</i>
            <p><%= @venue.accomodate %></p>
          </div>
        </div>
    </div>
  </div>
</div>
</div>



    <div class="row">
      <div class="col s6 center">
        <h5><u>Address</u></h5>
          <i class="small material-icons prefix orange-text text-darken-3">location_on</i>
            <%= @venue.address %>
            <br>
            <br>
            <script src="//maps.google.com/maps/api/js?v=3.25&key=AIzaSyC9Rer1Z5lhl-6yXyw0KZ8-rbt35YRwgow"></script>
            <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
            <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>

            <div class="mapContainer">
              <div id="map"></div>
            </div>
            <script type="text/javascript">
            handler = Gmaps.build('Google');
            handler.buildMap({ provider: { scrollwheel: false }, internal: {id: 'map'}}, function(){
              markers = handler.addMarkers(<%=raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
              handler.getMap().setZoom(15);
            });
            </script>
      </div>
      <div class="col s6 center">
        <h5><u>Request to Book</u></h5>
          <%= render 'bookings/form' %>
      </div>
    </div>
    <div class="">
      <br>
      <br>
    </div>

  </div>

</div>
</body>
